@model List<WebApplication1.DAL.Entities.About>

<div id="About" class="container-fluid bg-light overflow-hidden px-lg-0">
    <div class="container feature px-lg-5">
        <div class="row g-0 mx-lg-0">
            <div class="col-lg-6 feature-text py-5 wow fadeIn" data-wow-delay="0.5s">
                <div class="p-lg-5 ps-lg-0">
                    <div class="text-start">
                        <h1 class="display-5 mb-4" style="font-family: Times New Roman;">@Model[0].Title</h1>
                    </div>
                    <p class="mb-4 pb-2" style="font-family: Times New Roman;">@Model[0].Description</p>
                    <div class="row g-4">
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
                                    <i class="fa fa-check fa-2x text-primary"></i>
                                </div>
                                <div class="ms-4">
                                    <p class="mb-2" style="font-family: Times New Roman;">@Model[0].SubTitle1</p>
                                    <h5 class="mb-0" style="font-family: Times New Roman;">@Model[0].SubTitleDescription1</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
                                    <i class="fa fa-user-check fa-2x text-primary"></i>
                                </div>
                                <div class="ms-4">
                                    <p class="mb-2" style="font-family:Times New Roman;">@Model[0].SubTitle2</p>
                                    <h5 class="mb-0" style="font-family:Times New Roman;">@Model[0].SubTitleDescription2</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
                                    <i class="fa fa-drafting-compass fa-2x text-primary"></i>
                                </div>
                                <div class="ms-4">
                                    <p class="mb-2" style="font-family: Times New Roman;">@Model[0].SubTitle3</p>
                                    <h5 class="mb-0" style="font-family: Times New Roman;">@Model[0].SubTitleDescription3</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
                                    <i class="fa fa-headphones fa-2x text-primary"></i>
                                </div>
                                <div class="ms-4">
                                    <p class="mb-2" style="font-family: Times New Roman;">@Model[0].SubTitle4</p>
                                    <h5 class="mb-0" style="font-family: Times New Roman;">@Model[0].SubTitleDescription4</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 pe-lg-0" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <img class="position-absolute img-fluid w-100 h-100" src="@Model[0].Url" style="object-fit: cover;" alt="">
                </div>
            </div>
        </div>
    </div>
</div>