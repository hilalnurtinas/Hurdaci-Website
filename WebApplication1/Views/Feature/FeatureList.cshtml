@model List<WebApplication1.DAL.Entities.Feature>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Layout/Index.cshtml";
}


	<div class="content">
		<div class="container-fluid">
		<h4 class="page-title">Ana Resimler(Kaydırmalı olarak geçen resimler)</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
						<div class="card-title">Ana Resimleri(Kaydırmalı olarak geçen resimler) Güncelle</div>
						</div>
						<div class="card-body">
							
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">Başlık</th>
										<th scope="col">Açıklama</th>
										<th scope="col">Resim Linki</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach(var item in Model)
									{
										<tr>
											<td>@item.Title</td>
											<td>@item.Description</td>
											<td>@item.Url</td>
											<td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
											<td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a></td>
										</tr>
									}
								</tbody>
							</table>
							<a href="/Feature/CreateFeature/" class="btn btn-primary">Yeni Ana Resim Ekle </a>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

<style>
	td {
		max-width: 150px; /* Hücre genişliğini sınırlıyoruz */
		overflow: hidden; /* Taşan metni gizler */
		text-overflow: ellipsis; /* Taşan metni "..." ile gösterir */
		white-space: nowrap; /* Satır başı yapmayı engeller */
	}
</style>